<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoApp1.MainPage">

    <!-- ===== CORREGIDO: Resources movido aquí (opcional pero común) ===== -->
    <ContentPage.Resources>
        <Color x:Key ="Primary">#ab3527</Color>
        <Color x:Key ="Secondary">#775752</Color>
        <Color x:Key ="Tertiary">#775752</Color>
    </ContentPage.Resources>

    <ScrollView>


        <Grid x:Name="Container" BackgroundColor ="Black"> 
             <Frame Margin ="10" VerticalOptions ="Center" BackgroundColor="WhiteSmoke">
                <VerticalStackLayout Spacing="15" VerticalOptions="Center">
                    <Label
                        FontAttributes="Bold"
                        FontSize ="Large"
                        HorizontalTextAlignment="Center"
                        Text="Color Maker"/>
                    <Label Text="Red Value"/>
                    <Slider x:Name="sldRed"
                        ThumbColor="{StaticResource Primary}"
                        MaximumTrackColor="{StaticResource Tertiary}"
                        MinimumTrackColor="{StaticResource Secondary}"
                        Minimum="0" Maximum="255"/> 
                         <Label Text="Green Value"/>
                    <Slider x:Name="sldGreen"
                        ThumbColor="{StaticResource Primary}"
                        MaximumTrackColor="{StaticResource Tertiary}"
                        MinimumTrackColor="{StaticResource Secondary}"
                        Minimum="0" Maximum="255"/>
                         <Label Text="Blue Value"/>
                    <Slider x:Name="sldBlue"
                        ThumbColor="{StaticResource Primary}"
                        MaximumTrackColor="{StaticResource Tertiary}"
                        MinimumTrackColor="{StaticResource Secondary}"
                        Minimum="0" Maximum="255"/>
                    <Frame CornerRadius="25" HorizontalOptions="Center" Padding="10" BorderColor="LightGray"> 
                        <HorizontalStackLayout Spacing="10">
                            <Label x:Name="lblHex"
                                HorizontalTextAlignment="End"
                                Text="Hex Value: #000000"
                                VerticalOptions="Center" />
                            <ImageButton
                                HeightRequest="25"
                                Source="copy.svg"
                                VerticalOptions="Center"
                                WidthRequest="25"/>
                        </HorizontalStackLayout>
                    </Frame>
                    <Button
                        x:Name="btnRandom"
                        BackgroundColor="{StaticResource Primary}"
                        Text="Generate Random Color"/>
                </VerticalStackLayout>
             </Frame>
        </Grid>
    </ScrollView>

</ContentPage>